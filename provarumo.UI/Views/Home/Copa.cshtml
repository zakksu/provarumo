@model List<provarumo.Models.Entities.PedidoEntity>

@{
    ViewData["Title"] = "Copa";
}

<h1>Cozinha</h1>

@foreach (var pedido in Model)
{
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Numero pedido
            </dt>
            <dd class="col-sm-10">
                @pedido.NumeroPedido
            </dd>
            <dt class="col-sm-2">
                Numero mesa
            </dt>
            <dd class="col-sm-10">
                @pedido.NumeroMesa
            </dd>
            <dt class="col-sm-2">
                Bebida
            </dt>
            <dd class="col-sm-10">
                @pedido.Bebida
            </dd>
            <dt class="col-sm-2">
                Quantidade
            </dt>
            <dd class="col-sm-10">
                @pedido.Quantidade
            </dd>
        </dl>
    </div>
}

<div>
    <a asp-action="Index">Retornar aos pedidos</a>
</div>
