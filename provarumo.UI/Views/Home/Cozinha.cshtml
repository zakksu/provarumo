@model List<provarumo.Models.Entities.PedidoEntity>

@{
    ViewData["Title"] = "Cozinha";
}

<h1>Cozinha</h1>

@foreach (var m in Model)
{
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Numero pedido
            </dt>
            <dd class="col-sm-10">
                @m.NumeroPedido
            </dd>
            <dt class="col-sm-2">
                Numero mesa
            </dt>
            <dd class="col-sm-10">
                @m.NumeroMesa
            </dd>
            <dt class="col-sm-2">
                Prato
            </dt>
            <dd class="col-sm-10">
                @m.Prato
            </dd>
            <dt class="col-sm-2">
                Quantidade
            </dt>
            <dd class="col-sm-10">
                @m.Quantidade
            </dd>
        </dl>
    </div>
}

<div>
    <a asp-action="Index">Back to List</a>
</div>
