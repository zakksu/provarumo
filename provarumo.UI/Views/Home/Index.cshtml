@model List<provarumo.Models.Entities.PedidoEntity>

@{
    ViewData["Title"] = "Home Page";
}

<h1>Pedidos</h1>
<a class="btn btn-outline-primary" asp-area="" asp-controller="Home" asp-action="CadastrarPedido">Cadastrar Pedido</a>

<table class="table">
    <thead>
        <tr>
            <th scope="col"> Número do Pedido </th>
            <th scope="col"> Número da Mesa </th>
            <th scope="col"> Prato </th>
            <th scope="col"> Bebida </th>
            <th scope="col"> Quantidade </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var pedido in Model)
        {
            <tr>
                <th scope="row">@pedido.NumeroPedido</th>
                <td>@pedido.NumeroMesa</td>
                <td>@pedido.Prato</td>
                <td>@pedido.Bebida</td>
                <td>@pedido.Quantidade</td>
            </tr>
        }
    </tbody>
</table>
